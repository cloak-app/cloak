{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "cloak",
  "version": "0.6.0",
  "identifier": "com.cloak.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "icons/tray-icon.ico",
      "icons/tray-icon-active.ico"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDI4QTI4NzQxNDZGNDE2OEQKUldTTkZ2UkdRWWVpS0lvakZWaUY0cWsvMGpyb3JnM1g1VEhYNGdURWt0YmJrcFRZM2dQYkxzUTkK",
      "endpoints": [
        "https://github.com/Xav1erSue/cloak/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}